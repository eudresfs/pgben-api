# Configurações do Redis
# Estas configurações são otimizadas para melhorar a resiliência e performance
# da conexão com o Redis, reduzindo timeouts e falhas

# Configurações básicas de conexão
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Configurações de timeout e reconexão
REDIS_CONNECT_TIMEOUT=5000  # 5 segundos para timeout de conexão
REDIS_COMMAND_TIMEOUT=2000  # 2 segundos para timeout de comandos
REDIS_MAX_RETRIES=3         # Máximo de 3 tentativas por requisição (reduzido de 20)

# Configurações de circuit breaker
# Estas configurações são usadas pelo serviço de cache para gerenciar falhas
CACHE_CIRCUIT_BREAKER_THRESHOLD=3  # Número de falhas para abrir o circuito
CACHE_CIRCUIT_BREAKER_RESET=10000  # 10 segundos para tentar recuperar

# Configurações de cache local
CACHE_LOCAL_TTL=600  # 10 minutos de TTL para cache local (aumentado de 5 minutos)

# Desabilitar Redis (use apenas para testes ou desenvolvimento)
# DISABLE_REDIS=true  # Descomente para desabilitar o Redis e usar apenas cache em memória
