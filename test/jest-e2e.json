{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testRegex": ".(e2e-spec|integration.spec|api.spec).ts$",
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "collectCoverageFrom": [
    "../src/**/*.ts",
    "!../src/**/*.spec.ts",
    "!../src/**/*.dto.ts",
    "!../src/**/*.entity.ts"
  ],
  "coverageDirectory": "../coverage-e2e",
  "setupFilesAfterEnv": ["<rootDir>/setup-test-env.ts"],
  "testTimeout": 30000
}
