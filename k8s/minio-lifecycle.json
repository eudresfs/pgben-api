{
  "Rules": [
    {
      "ID": "Regra-Documentos-Temporarios",
      "Status": "Enabled",
      "Filter": {
        "Tag": {
          "Key": "tipo",
          "Value": "temporario"
        }
      },
      "Expiration": {
        "Days": 30
      }
    },
    {
      "ID": "Regra-Documentos-Padrão",
      "Status": "Enabled",
      "Filter": {
        "Prefix": "documentos/"
      },
      "Expiration": {
        "Days": 1825
      }
    },
    {
      "ID": "Regra-Documentos-Legais",
      "Status": "Enabled",
      "Filter": {
        "Tag": {
          "Key": "tipo",
          "Value": "legal"
        }
      },
      "Expiration": {
        "Days": 3650
      }
    },
    {
      "ID": "Regra-Documentos-Sensíveis",
      "Status": "Enabled",
      "Filter": {
        "Tag": {
          "Key": "sensivel",
          "Value": "true"
        }
      },
      "Transitions": [
        {
          "Days": 90,
          "StorageClass": "GLACIER"
        }
      ],
      "Expiration": {
        "Days": 1825
      }
    },
    {
      "ID": "Regra-Versionamento",
      "Status": "Enabled",
      "Filter": {
        "Prefix": ""
      },
      "NoncurrentVersionExpiration": {
        "NoncurrentDays": 90
      }
    }
  ]
}
