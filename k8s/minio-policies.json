{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket",
        "s3:GetBucketLocation"
      ],
      "Resource": [
        "arn:aws:s3:::pgben-documentos"
      ]
    },
    {
      "Effect": "Allow",
      "Action": [
        "s3:GetObject"
      ],
      "Resource": [
        "arn:aws:s3:::pgben-documentos/*"
      ],
      "Condition": {
        "StringEquals": {
          "s3:ExistingObjectTag/acesso": "publico"
        }
      }
    },
    {
      "Effect": "Deny",
      "Action": [
        "s3:GetObject"
      ],
      "Resource": [
        "arn:aws:s3:::pgben-documentos/*"
      ],
      "Condition": {
        "StringEquals": {
          "s3:ExistingObjectTag/sensivel": "true"
        }
      }
    }
  ]
}
