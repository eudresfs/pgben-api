# =============================================================================
# CONFIGURAÇÕES DE AMBIENTE PARA PORTAINER - PGBEN SERVER
# =============================================================================
# Este arquivo contém as configurações específicas para deploy via Portainer
# IMPORTANTE: Altere todas as senhas e chaves antes de usar em produção!
# =============================================================================

# Nome do projeto Docker Compose
COMPOSE_PROJECT_NAME=pgben-portainer

# =============================================================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# =============================================================================
DB_HOST=postgres
DB_PORT=5432
DB_USER=pgben_user
DB_PASS=pgben_secure_password_2024_CHANGE_ME
DB_NAME=pgben_prod
DB_POOL_SIZE=10
DB_SSL=false
DB_TIMEZONE=America/Sao_Paulo

# =============================================================================
# CONFIGURAÇÕES DE SEGURANÇA - ALTERE EM PRODUÇÃO!
# =============================================================================
# Chave de criptografia (256 bits em hex)
ENCRYPTION_KEY=a1b2c3d4e5f6789012345678901234567890abcdef1234567890abcdef123456

# Chave de assinatura de auditoria
AUDIT_SIGNING_KEY=audit_key_256_bits_change_in_production_environment_now

# Secrets para cookies e sessões
COOKIE_SECRET=cookie_secret_change_in_production_environment_secure
SESSION_SECRET=session_secret_change_in_production_environment_secure
CSRF_SECRET=csrf_secret_change_in_production_environment_secure

# =============================================================================
# CONFIGURAÇÕES DO REDIS
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=pgben_redis_2024_CHANGE_ME
REDIS_DB=0
REDIS_TTL=3600

# =============================================================================
# CONFIGURAÇÕES DO MINIO (OBJECT STORAGE)
# =============================================================================
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=pgben_minio_admin_CHANGE_ME
MINIO_SECRET_KEY=pgben_minio_secret_2024_CHANGE_ME
MINIO_BUCKET_NAME=pgben-documents
MINIO_USE_SSL=false

# =============================================================================
# CONFIGURAÇÕES DE EMAIL (MAILHOG PARA DESENVOLVIMENTO)
# =============================================================================
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@pgben.local
SMTP_SECURE=false

# =============================================================================
# CONFIGURAÇÕES DA APLICAÇÃO
# =============================================================================
NODE_ENV=production
PORT=3000
TZ=America/Sao_Paulo
LOG_LEVEL=info
ENABLE_SWAGGER=true
ENABLE_CORS=true

# =============================================================================
# CONFIGURAÇÕES DE RATE LIMITING
# =============================================================================
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# =============================================================================
# CONFIGURAÇÕES DE UPLOAD DE ARQUIVOS
# =============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# =============================================================================
# CONFIGURAÇÕES DE EXECUÇÃO
# =============================================================================
RUN_MIGRATIONS=true
RUN_SEEDS=false

# =============================================================================
# CONFIGURAÇÕES JWT
# =============================================================================
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRES_IN=30m
JWT_REFRESH_TOKEN_EXPIRES_IN=7d

# =============================================================================
# CONFIGURAÇÕES DE BUILD (PARA CI/CD)
# =============================================================================
BUILD_DATE=2024-01-01T00:00:00Z
VCS_REF=latest

# =============================================================================
# CONFIGURAÇÕES DE MONITORAMENTO
# =============================================================================
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# =============================================================================
# CONFIGURAÇÕES DE LOGGING
# =============================================================================
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5
LOG_COMPRESS=true

# =============================================================================
# CONFIGURAÇÕES DE REDE
# =============================================================================
NETWORK_SUBNET=172.20.0.0/16

# =============================================================================
# INSTRUÇÕES DE SEGURANÇA
# =============================================================================
# ANTES DE USAR EM PRODUÇÃO:
# 1. Altere TODAS as senhas e chaves secretas
# 2. Gere chaves JWT RSA próprias (use: npm run generate:jwt-keys)
# 3. Configure SSL/TLS para conexões externas
# 4. Revise as configurações de rede e firewall
# 5. Configure backup automático dos volumes
# 6. Implemente monitoramento e alertas
# 7. Configure rotação de logs
# 8. Teste a recuperação de desastres
# =============================================================================